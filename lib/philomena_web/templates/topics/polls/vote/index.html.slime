h2 Listing Voters

table.table
  thead
    tr
      th
  tbody
    = for vote <- @voters do
      tr
        td class="text-right"
          = link "Show", to: Routes.topics_polls_vote_path(@conn, :show, vote), class: "btn btn-default btn-xs"
          | &nbsp;
          = link "Edit", to: Routes.topics_polls_vote_path(@conn, :edit, vote), class: "btn btn-default btn-xs"
          | &nbsp;
          = link "Delete", to: Routes.topics_polls_vote_path(@conn, :delete, vote), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs"

= link "New Vote", to: Routes.topics_polls_vote_path(@conn, :new)
